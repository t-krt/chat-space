.sidebar
  .side-header
    .side-header__name
      = current_user.name
    %ul.menu
      %li.menu__create-group
        =link_to new_group_path do 
          %i.fa.fa-edit
      %li.menu__settings
        =link_to edit_user_path(current_user) do
          %i.fa.fa-cog
  .groups
    - current_user.groups.each do |group|
      =link_to group_messages_path(group) do
        .group
          .group__name
            =group.name
          .group__message
            = group.show_last_message