%ul.chat-messages{data: {id: "#{ message.id }"}}
  %li.chat-messages__name
    = message.user.name
  %li.chat-messages__time
    = message.created_at.strftime("%Y/%m/%d %H:%M")
  %li.chat-messages__text
    - if message.content.present?
      = message.content
  %li.chat-messages__image
    = image_tag message.image.url if message.image.present?
